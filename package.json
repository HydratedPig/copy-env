{
  "name": "@hydrated_pig/copy-env",
  "type": "module",
  "version": "1.0.4",
  "packageManager": "pnpm@10.26.1",
  "description": "Automatically copy .env.example to .env.local in monorepo projects",
  "author": "HydratedPig",
  "license": "MIT",
  "homepage": "https://github.com/HydratedPig/copy-env#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HydratedPig/copy-env.git"
  },
  "bugs": {
    "url": "https://github.com/HydratedPig/copy-env/issues"
  },
  "keywords": [
    "copy-env",
    "copy-env-cli",
    "env",
    "dotenv",
    ".env",
    ".env.example",
    ".env.local",
    "environment",
    "environment-variables",
    "monorepo",
    "workspace",
    "pnpm",
    "lerna",
    "copy",
    "cli",
    "hydratedpig",
    "hydrated-pig"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "copy-env": "./dist/cli.mjs"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "docs"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "rolldown -c rolldown.config.ts --watch",
    "build": "rolldown -c rolldown.config.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build",
    "test:install": "./scripts/install-examples.ts"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.13.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "execa": "^9.6.1",
    "rolldown": "^1.0.0-beta.55",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "engines": {
      "node": ">=16.0.0"
    }
  }
}
